# ========================================
# BELVO OPEN FINANCE
# ========================================

# Credenciais da API Belvo (sandbox ou produção)
BELVO_ID=seu_client_id
BELVO_SECRET=seu_secret
BELVO_ENV=sandbox

# ID do link padrão (opcional, se quiser sincronização automática sem enviar no body)
BELVO_DEFAULT_LINK_ID=

# Token de serviço para cron chamar a rota protegida
BELVO_SYNC_SERVICE_TOKEN=defina_um_token_seguro

# URL da rota local para sincronização automática
BELVO_SYNC_URL=http://localhost:3000/api/belvo/sync

# Arquivo de ambiente carregado pelo cron (por padrão .env.local)
BELVO_ENV_FILE=.env.local

# Expressão CRON (padrão: todo dia às 08:00)
BELVO_CRON_EXPRESSION=0 8 * * *

# Fuso horário para o cron (padrão: America/Sao_Paulo)
BELVO_CRON_TZ=America/Sao_Paulo

# Executar sincronização imediata ao iniciar o script (true/false)
BELVO_CRON_RUN_ON_START=true

