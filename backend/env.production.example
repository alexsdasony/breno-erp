# Configurações de Produção - Render
NODE_ENV=production
PORT=10000

# CORS - URL do seu frontend na Vercel
CORS_ORIGIN=https://breno-erp.vercel.app

# JWT Secret - Será gerado automaticamente pelo Render
JWT_SECRET=your-super-secret-jwt-keyx`-change-this-in-production

# Database - PostgreSQL URL fornecida pelo Render
DATABASE_URL=postgresql://username:password@hostname:port/database

# Taxa de limite de requisições
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Log Level
LOG_LEVEL=info 